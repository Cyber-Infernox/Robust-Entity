<html lang="en">
  <%- include("./partials/head.ejs") %>

  <body>
    <%- include("./partials/nav.ejs") %>

    <div class="container">
      <div class="box">
        <div class="head">
          <h1>Sign in</h1>

          <form action="/login" method="POST">
            <input
              class="line"
              id="line2"
              type="email"
              placeholder="Email"
            /><br />
            <input
              class="line"
              id="line3"
              type="password"
              placeholder="Password(8+ characters)"
            /><br />
            <section class="line sec">Forgot Password?</section>
            <input class="btn line" type="submit" value="Sign in" />
          </form>

          <div class="signin">
            <span class="block"> New to JobKnots? </span>
            <span id="direct">
              <a id="visit" href="SignUp">Sign up</a>
            </span>
          </div>
        </div>
      </div>
    </div>

    <%- include("./partials/footer.ejs") %>

    <script
      src="https://kit.fontawesome.com/346bd1243a.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
